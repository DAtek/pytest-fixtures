{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "curly": "warn",
    "eqeqeq": "warn",
    "no-throw-literal": "warn",
    "indent": ["error", 4],
    "semi": "error",
    "quotes": ["error", "double"]
  },
  "ignorePatterns": ["**/*.d.ts", "dist/**/*.js"]
}
